# Configuring Node.js version and environment settings for Elastic Beanstalk
option_settings:
  aws:elasticbeanstalk:environment:process:default:
    Port: 3000  # Next.js default port
    HealthCheckPath: /  # Health check for SSR
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 3000